     <div class="container mt-5 mb-5">
            <h2 class="mt-5 text-primary text-center fw-bold">Vista de Producto</h2>
            <% if(items.length > 0) {%>

            <div class="table-responsive">
                <table class="table table-info">
                    <thead>
                        <tr>
                        <th scope="col">Producto</th>
                        <th scope="col">Precio</th>
                        <th scope="col">Imagen</th>
                        </tr>
                    </thead>
                    <% items.forEach((item) =>{ %>
                     <tbody>
                        <tr>
                            <td><%= item.title %></td>
                            <td><%= item.price %></td>
                            <td class="w-25">
                                <img src="<%= item.thumbnail %>" alt="<%= item.title %>">
                            </td>
                        </tr>
                
                    </tbody>
                    <% })%>
                </table>
            </div>

            <% } else { %>
                <div class="alert alert-warning" role="alert">
                   <h2 class="text-center">No se encontraron datos!</h2> 
                </div>
            <% } %>
    </div>